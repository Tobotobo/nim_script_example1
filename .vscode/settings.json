{
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "nim": "nim --hints:off"
    },
    "editor.formatOnSave": true,
    "[bat]": {
        "files.encoding": "shiftjis",
        "files.eol": "\r\n",
    },
    "[nim]": {
        "files.encoding": "utf8",
        "files.eol": "\n",
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "code-runner.saveFileBeforeRun": true
}